@model List<SimpleECA.Models.ProductViewModel>

<div class="">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card">
                    @{
                        var prImges = item.ProductImages.FirstOrDefault();
                    }
                    <img class="card-img-top" src="@(prImges.imageurl)" alt="@prImges.imagename">
                    <div class="card-img-overlay d-flex justify-content-end">
                        <a href="#" class="card-link text-danger like">
                            <i class="fa fa-heart"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">@item.productname</h4>
                        <h6 class="card-subtitle mb-2 text-muted">@item.brandName</h6>
                        <p class="card-text">
                            @item.shortdescription
                        </p>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <div class="price text-success">
                                <h6 class="mt-4"><span class="pr-2">Rs.@(item.price - ((item.discount / 100) * item.price))</span> <span class="pr-2"><del class="pr-2"><i>@item.price</i></del></span><span class="pr-2">@(item.discount)% Off</span></h6>
                            </div>
                        </div>
                        <a href="#" class="btn btn-danger mt-3"><i class="fa fa-shopping-cart"></i> Add to Cart</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>