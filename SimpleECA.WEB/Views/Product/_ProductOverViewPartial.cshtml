@model SimpleECA.Models.ProductViewModel
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6 product_img">
                <img src="data:image/jpg;base64,@(Model.ProductImages.FirstOrDefault().imageurl)" class="img-responsive">
            </div>
            <div class="col-md-6 product_content">
                <h4>@Model.productname</h4>
                <div class="rating">
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    (10 reviews)
                </div>
                <p>@Model.longdescription</p>
                <h3 class="cost"><span class="glyphicon glyphicon-usd"></span>₹@(Model.price - ((Model.discount / 100) * Model.price)) <small class="pre-cost"><span class="glyphicon glyphicon-usd"></span>₹@Model.price</small></h3>
                <div class="space-ten"></div>
                <div class="btn-ground">
                    <button onclick="ProductAddtoCart(@(Model.productid))" type="button" class="btn btn-danger"><span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart</button>
                    <button onclick="ProductAddtoWishList(@(Model.productid))" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-heart"></span> Add To Wishlist</button>
                    <button type="button" class="btn btn-info"><span class="glyphicon glyphicon-heart"></span> BUY</button>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .product_img{
        position:relative;
    }
    .product_img img {
        width: 100%;
        object-fit: contain;
        height: 100%;
    }
</style>